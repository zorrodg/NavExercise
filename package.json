  "license": "Â© 2014 Huge. All Rights Reserved.",
  "homepage": "https://github.com/hugeinc/NavExercise",
  "bugs": {
    "url": "https://github.com/hugeinc/NavExercise/issues"
  },
  "private": true,
  "scripts": {
    "test": "./node_modules/.bin/mocha --compilers js:mocha-traceur _test",
    "start": "npm run compile-js & npm run compile-css && node ./bin/www",
    "watch": "npm run watch-js & npm run watch-css & node ./bin/www",
    "watch-js": "./node_modules/.bin/watchify _src/index.js -o public/bundle.js -dv",
    "compile-js": "./node_modules/.bin/browserify _src/index.js > public/bundle.js",
    "watch-css": "./node_modules/.bin/nodemon --exec \"npm run compile-css\" --watch _src -e less -q",
    "compile-css": "./node_modules/.bin/lessc _src/index.less public/bundle.css"
  },
  "dependencies": {
    "babelify": "^6.1.2",
    "browserify": "^10.2.3",
    "express": "~4.2.0",
    "less": "^2.5.1",
    "morgan": "~1.0.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "devDependencies": {
    "jsdom": "^5.4.3",
    "mocha": "^2.2.5",
    "mocha-traceur": "^2.1.0",
    "nodemon": "^1.3.7",
    "watchify": "^3.2.1"
  }
}
